--- a/Makefile
+++ b/Makefile
@@ -35,9 +35,6 @@ install:
 	for subdir in $$list; do \
 		$(MAKE) DESTDIR=$(DESTDIR) -C $$subdir $@ || exit 1; \
 	done; \
-	if test -z "$(DESTDIR)"; then \
-	  /sbin/ldconfig -n "$(DESTDIR)$(libdir)" 2> /dev/null || true; \
-	fi
 
 uninstall:
 	rm -f "$(DESTDIR)$(bindir)"/mlt-config
